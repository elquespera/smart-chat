datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id      Int      @id @default(autoincrement())
  role    ChatRole
  content String
  chatId  Int
  chat    Chat     @relation(fields: [chatId], references: [id])
}

model Chat {
  id       Int       @id @default(autoincrement())
  title    String
  userId   String
  messages Message[]

  @@index([userId])
}

enum ChatRole {
  USER
  ASSISTANT
}
